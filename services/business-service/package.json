{
  "name": "business-service",
  "version": "2.0.0",
  "description": "Business logic microservice for CV recruitment system with user management, authentication, and Firebase integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:models": "jest --testPathPattern=__tests__/unit/models",
    "test:controllers": "jest --testPathPattern=__tests__/unit/controllers",
    "test:api": "jest --testPathPattern=__tests__/integration/api",
    "test:ci": "jest --coverage --watchAll=false --ci",
    "test:silent": "jest --silent",
    "test:verbose": "jest --verbose",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "setup-db": "node ../../database/setup.js init",
    "setup-test-db": "NODE_ENV=test node ../../database/setup.js init"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^11.10.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.11.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.12",
    "axios": "^1.10.0",
    "jest": "^29.6.4",
    "jest-environment-node": "^29.6.4",
    "nodemon": "^3.0.1",
    "pg-mem": "^2.6.13",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "recruitment",
    "cv",
    "business-service",
    "authentication",
    "user-management",
    "firebase",
    "postgresql",
    "api"
  ],
  "author": "CV Recruitment System",
  "license": "MIT"
}
